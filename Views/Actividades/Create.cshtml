@model ServicioSocial.Models.Actividad
@{
    ViewData["Title"] = "Registrar Nueva Actividad";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <!-- ✅ INFORMACIÓN DE LÍMITE DE HORAS -->
    <div class="alert alert-info mb-4">
        <h5><i class="fas fa-info-circle"></i> Límite de Horas</h5>
        <p class="mb-0">
            Cada estudiante puede registrar un máximo de <strong>80 horas</strong> en total
            (sumando actividades aprobadas y pendientes).
        </p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4"
                              placeholder="Describe la actividad que realizaste..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input asp-for="Fecha" class="form-control" type="date"
                           value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HorasDedicadas" class="control-label"></label>
                    <input asp-for="HorasDedicadas" class="form-control"
                           type="number" step="0.5" min="0.5" max="24"
                           placeholder="Ej: 1.5, 2, 3.5..." />
                    <small class="form-text text-muted">Horas dedicadas a la actividad (0.5 - 24 horas por actividad)</small>
                    <span asp-validation-for="HorasDedicadas" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-success">Registrar Actividad</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Establecer la fecha máxima como hoy
        document.getElementById('Fecha').max = new Date().toISOString().split('T')[0];
    </script>
}